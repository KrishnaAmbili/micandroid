<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/findScreenBar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_new_main"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/findScreenHeadBar"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/topbar_new_main"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/findScreenliding"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="0dp"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/findScreenCatName"
            style="@style/inputTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.83"
            android:gravity="left|center"
            android:paddingLeft="70dp"
            android:text="@string/find_map_title"
            android:textColor="@color/headTitleColor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/findScrennMapLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.google.android.maps.MapView
            android:id="@+id/findScreenMap"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:apiKey="00t2obY8ctbPoP4OFoP1-Of7xZ_d1Nci6L7169A"
            android:clickable="true" />
        <!-- home:00t2obY8ctbP8A4BN22lly8Mf-84SmU1tYelpbQ -->
    </LinearLayout>

</LinearLayout>