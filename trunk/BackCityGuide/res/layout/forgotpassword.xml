<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/app_background">
  
  <RelativeLayout
		  xmlns:android="http://schemas.android.com/apk/res/android"
		  android:id="@+id/RelLayHead"
		  android:layout_width="fill_parent"
		  android:layout_height="50px" 
	  	  android:background="@drawable/topheading"
	
		>
		
		<Button   
	    	android:id="@+id/ButHomeTop"
	      	android:layout_width="60px" 
	    	android:layout_height="35px"
	    	android:gravity="right|center"
	    	android:text="Sign in"
	    	android:layout_marginTop="5px"
	    	android:layout_marginBottom="5px"
	    	android:paddingRight="10px"
	    	android:background="@drawable/button_top"
	    	android:textColor="@color/violet"
	    	android:typeface="sans"
	    	android:textStyle="bold"
      	/>
     
      <TextView   
	    	android:id="@+id/txtHeading"
	      	android:layout_width="fill_parent" 
	    	android:layout_height="40px"
	    	android:textSize="16px"
	    	android:gravity="center"
	    	android:text="Forgotten Password"
	    	android:layout_marginTop="5px"
	    	android:textColor="@color/violet"
	    	android:typeface="sans"
	    	android:textStyle="bold"
    
     	/> 
   </RelativeLayout>
   
   
   <TextView   
    	android:id="@+id/txtEnterdetails"
      	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:textSize="12px"
    	android:text="Enter details below"
    	android:layout_marginLeft="20px"
    	android:layout_below="@+id/RelLayHead"
    	android:layout_marginTop="10px"
    	android:textColor="@color/violet"
    		android:typeface="sans"
	    	android:textStyle="bold"
    
  
    		
      /> 	
  
  <EditText android:id="@+id/edtEmail"
      	android:layout_width="fill_parent" 
    	android:layout_height="40px"
    	android:textSize="18px"
    	android:gravity="left"
    	android:hint="Email Address"
    	android:layout_marginLeft="20px"	
    	android:layout_marginRight="20px"
    	android:layout_below="@+id/txtEnterdetails"
    	android:layout_marginTop="10px"
    	android:inputType="textEmailAddress"
    	android:textColor="@color/violet"
   />
   
 <EditText android:id="@+id/edtcnfemail"
      	android:layout_width="fill_parent" 
    	android:layout_height="40px"
    	android:textSize="18px"
    	android:gravity="left"
    	android:hint="confirm Email Address"
    	android:layout_marginLeft="20px"	
    	android:layout_marginRight="20px"
    	android:layout_below="@+id/edtEmail"
    	android:layout_marginTop="10px"
    	android:inputType="textPassword"
    	android:textColor="@color/violet"
    	/>

 <Button   
    	android:id="@+id/ButSendPassword"
      	android:layout_width="fill_parent" 
    	android:layout_height="40px"
    	android:gravity="center"
    	android:textSize="18px"
    	android:text="Send Password"
    	android:layout_marginLeft="20px"	
    	android:layout_marginRight="20px"
    	android:layout_below="@+id/edtcnfemail"
    	android:layout_marginTop="10px"
    	android:background="@drawable/button_on"
    	android:textColor="@color/violet"
    	android:typeface="sans"
	    android:textStyle="bold"
    
  
    />
     
 
 
    
   <RelativeLayout
		  xmlns:android="http://schemas.android.com/apk/res/android"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content" 
		  android:layout_marginBottom="10px"
		  android:layout_marginLeft="20px"
		  android:layout_marginRight="20px"
		  android:layout_alignParentBottom="true"
		>
		
		 <Button   
		    	android:id="@+id/Buthome"
		      	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/home_on"
		  />
	   
	    <Button   
		    	android:id="@+id/ButSerarch"
		      	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/search_off"
		    	android:layout_toRightOf="@+id/Buthome"
		  />
		  <Button   
		    	android:id="@+id/ButFev"
		      	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/favourites_off"
		    	android:layout_toRightOf="@+id/ButSerarch"
		  />
		  <Button   
		    	android:id="@+id/ButPeople"
		      	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/friends_off"
		    	android:layout_toRightOf="@+id/ButFev"
		  />
		  <Button   
		    	android:id="@+id/ButSetting"
		      	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/settings_off"
		    	android:layout_toRightOf="@+id/ButPeople"
		  />
		
  
  </RelativeLayout>
</RelativeLayout>