<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme" parent="@android:style/Theme.Black">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="inputTextStyle">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.6</item>
        <item name="android:shadowRadius">3.0</item>
    </style>

    <style name="signup_editText_one">
        <item name="android:textColor">@color/violet</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="normalText.span">
        <item name="android:textColor">#888</item>
    </style>

    <style name="InsetText">
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="Button" parent="@style/InsetText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

</resources>