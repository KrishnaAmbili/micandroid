<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_background" >

    <EditText
        android:id="@+id/sqliteETxtUn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sqliteTextUn"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip" />

    <TextView
        android:id="@+id/sqliteTextUn"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_alignParentLeft="true"
        android:gravity="left|center"
        android:text="City"
        android:textColor="@color/violet"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sqliteTextPs"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sqliteETxtUn"
        android:gravity="left|center"
        android:text="Distance"
        android:textColor="@color/violet"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/sqliteEtxtPs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sqliteTextPs"
        android:layout_below="@+id/sqliteTextPs"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip" />

    <EditText
        android:id="@+id/searchTxts"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/sqliteEtxtPs"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/textborder"
        android:clickable="true"
        android:hint="Email Address"
        android:imeOptions="actionDone"
        android:inputType="textFilter"
        android:maxLength="10"
        android:paddingLeft="10dp"
        android:textColor="@color/violet"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sqliteSubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Submit" />

    <Button
        android:id="@+id/sqliteViewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sqliteSubmitBtn"
        android:layout_alignBottom="@+id/sqliteSubmitBtn"
        android:layout_toRightOf="@+id/sqliteSubmitBtn"
        android:text="View" />

</RelativeLayout>